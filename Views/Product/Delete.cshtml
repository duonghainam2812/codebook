@model ASM4.Models.Product

<style>
    /* Container chính để bọc thông tin sản phẩm */
    .delete-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 30px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 50px;
        max-width: 800px;
        margin: 0 auto;
    }

    /* Tiêu đề trang */
    h2 {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #333;
    }

    /* Các thông tin sản phẩm */
    .product-info {
        text-align: center;
        margin-bottom: 30px;
    }

        .product-info h4 {
            font-size: 18px;
            margin: 10px 0;
        }

        /* Hình ảnh sản phẩm */
        .product-info img {
            max-width: 100%;
            height: auto;
            max-height: 400px;
            border-radius: 8px;
            margin-top: 20px;
        }

    /* Nút xóa */
    .delete-btn {
        background-color: #dc3545;
        color: white;
        padding: 12px 25px;
        border: none;
        border-radius: 30px;
        font-weight: bold;
        font-size: 16px;
        transition: background-color 0.3s, transform 0.3s;
    }

        .delete-btn:hover {
            background-color: #c82333;
            cursor: pointer;
            transform: scale(1.05);
        }

    /* Nút quay lại danh sách */
    .back-to-list-btn {
        background-color: #28a745;
        color: white;
        padding: 12px 25px;
        text-decoration: none;
        border-radius: 30px;
        font-weight: bold;
        font-size: 16px;
        margin-left: 10px;
        transition: background-color 0.3s, transform 0.3s;
    }

        .back-to-list-btn:hover {
            background-color: #218838;
            cursor: pointer;
            transform: scale(1.05);
        }

    /* Responsive */
    

    .delete-btn, .back-to-list-btn {
        width: 100%;
        padding: 15px 0;
        text-align: center;
    }

    .product-info h4 {
        font-size: 16px;
    }

    }</style>

<div class="delete-container">
    <h2>Are you sure you want to delete this product?</h2>
    <div class="product-info">
        <h4>Id: @Model.Id</h4>
        <h4>Title: @Model.Title</h4>
        <h4>Author: @Model.Author</h4>
        <h4><img src="@Model.ImageUrl" alt="Product Image" /></h4>
        <h4>Price: @Model.Price.ToString("N0")₫</h4>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="delete-btn">Delete</button>
        <button type="button" class="back-to-list-btn" onclick="goBack()">Back to List</button>
    </form>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>
