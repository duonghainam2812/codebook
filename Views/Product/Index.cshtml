@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<ASM4.Models.Product>

<style>
    /* Layout chính */
    .main-layout {
        display: flex;
        gap: 20px;
        margin: 20px;
    }

    /* Sidebar */
    .sidebar {
        width: 250px;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        background-color: #f9f9f9;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .sidebar h3 {
            margin-bottom: 10px;
            font-size: 18px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar li {
            margin: 10px 0;
        }

        .sidebar a {
            text-decoration: none;
            color: #007bff;
        }

            .sidebar a:hover {
                text-decoration: underline;
            }

    /* Container chính cho grid layout */
    .product-container {
        flex: 1; /* Chiếm phần còn lại của layout */
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
    }

    /* Card sản phẩm */
    .product-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        padding: 15px;
        text-align: center;
        background-color: #fff;
    }

        .product-card img {
            height: 200px;
            width: auto;
            object-fit: cover;
            margin-bottom: 10px;
        }

        .product-card h3 {
            font-size: 18px;
            margin: 5px 0;
        }

        .product-card p {
            font-size: 14px;
            color: #555;
            margin-bottom: 10px;
        }

        .product-card .price {
            font-weight: bold;
            color: #dc3545;
            margin: 10px 0;
        }

        .product-card .actions a {
            text-decoration: none;
            color: #007bff;
            margin: 0 5px;
        }

            .product-card .actions a:hover {
                text-decoration: underline;
            }

    /* Description */
    .description-content {
        display: -webkit-box; /* Bắt buộc dùng với line-clamp */
        -webkit-line-clamp: 3; /* Số dòng hiển thị */
        -webkit-box-orient: vertical; /* Hướng hiển thị */
        overflow: hidden; /* Ẩn phần vượt quá */
        text-overflow: ellipsis; /* Thêm dấu "..." */
        margin-bottom: 10px;
        text-align: justify;
        font-size: 14px;
        line-height: 1.4; /* Độ cao của dòng */
    }
    /* Title - Giới hạn 1 dòng */
    .product-card h3 {
        font-size: 18px;
        margin: 5px 0;
        white-space: nowrap; /* Giữ văn bản trên một dòng */
        overflow: hidden; /* Ẩn phần dư thừa */
        text-overflow: ellipsis; /* Thêm dấu "..." */
    }

</style>

<h2>Danh sách sản phẩm</h2>

<div class="main-layout">
    <!-- Sidebar -->
    <div class="sidebar">
        <h3>Chủ đề</h3>
        <ul>
            <li><a href="#">Cuộc sống</a></li>
            <li><a href="#">Lập trình</a></li>
            <li><a href="#">Sức khỏe</a></li>
            <li><a href="#">Kỹ năng</a></li>
            <li><a href="#">Văn học</a></li>
        </ul>
    </div>

    <!-- Danh sách sản phẩm -->
    <div class="product-container">
        @foreach (var product in Model)
        {
            <div class="product-card">
                <img src="@product.ImageUrl" alt="@product.Title" />
                <h3>@product.Title</h3>
                <p><strong>Tác giả:</strong> @product.Author</p>
                <p class="description-content">@product.Description</p>
                <p class="price">@product.Price.ToString("N0")đ</p>
                <div class="actions">
                    <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-view">Xem</a>
                    <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-edit">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-delete">Xóa</a>
                </div>

            </div>
        }
    </div>
</div>
